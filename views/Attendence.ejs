<%- include('partials/header') %>
<div class="container mt-5">
  <h1> Attandence Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/attendence" method="POST">
            <div class="form-group">
              <div class="form-group">
                <label for="lno">Lecture No</label>
                <input type="number" class="form-control" name="lno">
              </div>
              <table>
                <div class="form-group">
                  <tr>
                    <td>Mark</td>
                    <td>Students Name</td>
                    <td>Roll Number</td>
                  </tr>
                <% for(var i=0;i<name.length;i++){ %>
                  <div class="form-group">
                <tr>
                  <td><input type="checkbox" name="checkb"></td>
                  <td><%=name[i].name%></td>
                  <td><%=name[i].rollno%></td>
                </tr>
              </div>
            <% } %>
              </table>

            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
