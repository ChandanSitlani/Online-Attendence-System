<%- include('partials/header') %>

<div class="container mt-5">
  <h1> Attandance Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/attendence" method="POST">
            <div class="form-group">
              <div class="form-group">
                <label for="lno">Lecture No</label>
                <input type="number" class="form-control" name="lno">
              </div>
              <div class="form-group">
                <label for="subid">Subject ID</label>
                <input type="text" class="form-control" name="subid">
              </div>
              <div class="form-group">
                <label for="date">Date</label>
                <input type="date" class="form-control" name="date">
              </div>
              <table>
                <div class="form-group">
                  <tr>
                    <td>Mark </td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;Roll Number</td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;Students Name </td>

                  </tr>
                <% for(var i=0;i<name.length;i++){ %>
                  <div class="form-group">
                <tr>
                  <td><input type="checkbox" name="checkb" value="<%=name[i].rollno%>"></td>
                  <td>&nbsp;&nbsp;&nbsp;&nbsp;<%=name[i].rollno%></td>
                  <td>&nbsp;&nbsp;&nbsp;&nbsp;<%=name[i].name%></td>
                </tr>
              </div>
            <% } %>
              </table>

            <button type="submit" class="btn btn-dark">Save To Register</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
